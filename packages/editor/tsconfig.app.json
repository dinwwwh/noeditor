{
  "extends": "@dinwwwh/tsconfig/dom-lib.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@editor/*": ["src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__snapshots__/**"
  ]
}
